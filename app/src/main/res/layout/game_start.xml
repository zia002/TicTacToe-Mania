<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    android:background="@drawable/start_bg"
    android:padding="@dimen/_4sdp">

    <ImageView
        android:id="@+id/player1Img"
        android:layout_width="@dimen/_45sdp"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/roundbg"
        android:src="@drawable/person"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/player1Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:fontFamily="@font/chango"
        android:padding="@dimen/_4sdp"
        android:shadowColor="#000000"
        android:shadowDx="8"
        android:shadowDy="4"
        android:shadowRadius="2"
        android:text="Player-1"
        android:textColor="@color/white"
        android:textSize="@dimen/_13sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/player1Img" />

    <ImageView
        android:id="@+id/player2Img"
        android:layout_width="@dimen/_45sdp"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:background="@drawable/roundbg"
        android:src="@drawable/person"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/player2Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:fontFamily="@font/chango"
        android:padding="@dimen/_4sdp"
        android:shadowColor="#000000"
        android:shadowDx="8"
        android:shadowDy="4"
        android:shadowRadius="2"
        android:text="Player-2"
        android:textColor="@color/white"
        android:textSize="@dimen/_13sdp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/player2Img" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal"
        android:padding="@dimen/_4sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/player1Name"
        >

        <ImageView
            android:id="@+id/player1Item"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:background="@drawable/roundbg"
            android:padding="@dimen/_4sdp"
            android:src="@drawable/cross" />
        <TextView
            android:id="@+id/whoFirst"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/chango"
            android:gravity="center"
            android:padding="@dimen/_4sdp"
            android:shadowColor="#000000"
            android:shadowDx="8"
            android:shadowDy="4"
            android:shadowRadius="2"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp"
            />
        <ImageView
            android:id="@+id/player2Item"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:background="@drawable/roundbg"
            android:padding="@dimen/_4sdp"
            android:src="@drawable/circle" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>