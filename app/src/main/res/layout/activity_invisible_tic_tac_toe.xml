<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".gameLogic.InfiniteTicTacToe">
<!-- Top player-1 Profile   -->
    <RelativeLayout
        android:id="@+id/player1Bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="@dimen/_4sdp"
        >
        <ImageView
            android:contentDescription="@string/image_description"
            android:id="@+id/player1Image"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_alignParentStart="true"
            android:background="@drawable/custom_border"
            android:layout_margin="@dimen/_3sdp"
            />

        <TextView
            android:id="@+id/player1Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="monospace"
            android:gravity="center"
            android:text="Player-1"
            android:textSize="@dimen/_18sdp"
            android:textStyle="bold"
            android:layout_toEndOf="@+id/player1Image"
            />

        <Chronometer
            android:id="@+id/player1Timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/chango"
            android:textSize="@dimen/_16sdp"
            android:layout_alignParentEnd="true"
            android:background="@drawable/dark_bg"
            android:padding="@dimen/_7sdp"
            android:layout_marginEnd="@dimen/_4sdp"
            android:textColor="@color/white"
            />
    </RelativeLayout>
<!--  Bottom player-2 profile  -->
    <RelativeLayout
        android:id="@+id/player2Bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_4sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/player2Image"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_alignParentStart="true"
            android:layout_margin="@dimen/_3sdp"
            android:background="@drawable/custom_border"
            android:contentDescription="@string/image_description" />

        <TextView
            android:id="@+id/player2Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_toEndOf="@+id/player2Image"
            android:fontFamily="monospace"
            android:gravity="center"
            android:text="Player-2"
            android:textSize="@dimen/_18sdp"
            android:textStyle="bold" />

        <Chronometer
            android:id="@+id/player2Timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginEnd="@dimen/_4sdp"
            android:background="@drawable/dark_bg"
            android:fontFamily="@font/chango"
            android:padding="@dimen/_7sdp"
            android:textColor="@color/white"
            android:textSize="@dimen/_16sdp" />
    </RelativeLayout>
    <!--  Here we put the cross and circle-->
    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="@dimen/_240sdp"
        android:layout_height="@dimen/_240sdp"
        android:columnCount="3"
        android:rowCount="3"
        app:layout_constraintBottom_toTopOf="@+id/player2Bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/player1Bg">

        <ImageView
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="@string/image_description"
            android:id="@+id/b00"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/_8sdp"
            />

        <ImageView
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="@string/image_description"
            android:id="@+id/b01"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/_8sdp"
            />

        <ImageView
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="@string/image_description"
            android:id="@+id/b02"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/_8sdp"
            />

        <ImageView
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="@string/image_description"
            android:id="@+id/b10"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/_8sdp"
            />

        <ImageView
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="@string/image_description"
            android:id="@+id/b11"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/_8sdp"
            />

        <ImageView
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="@string/image_description"
            android:id="@+id/b12"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/_8sdp"
            />
        <ImageView
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="@string/image_description"
            android:id="@+id/b20"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/_8sdp"
            />

        <ImageView
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="@string/image_description"
            android:id="@+id/b21"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/_8sdp"
            />

        <ImageView
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="@string/image_description"
            android:id="@+id/b22"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="@dimen/_8sdp"
            />

    </GridLayout>
<!--  it contain the vertical line  -->
    <GridLayout
        android:layout_width="@dimen/_240sdp"
        android:layout_height="@dimen/_240sdp"
        android:rowCount="1"
        android:columnCount="3"
        app:layout_constraintBottom_toTopOf="@+id/player2Bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/player1Bg">
        <View
            android:layout_columnWeight="1"
            android:layout_gravity="end"
            android:layout_width="@dimen/_4sdp"
            android:layout_height="match_parent"
            android:background="@drawable/custom_line"
            />
        <View
            android:layout_columnWeight="1"
            android:layout_gravity="end"
            android:layout_width="@dimen/_4sdp"
            android:layout_height="match_parent"
            android:background="@drawable/custom_line"
            />
        <View
            android:layout_columnWeight="1"
            android:layout_gravity="end"
            android:layout_width="@dimen/_4sdp"
            android:layout_height="match_parent"
            />
    </GridLayout>
<!--  it contain the horizontal line  -->
    <GridLayout
        android:layout_width="@dimen/_240sdp"
        android:layout_height="@dimen/_240sdp"
        android:rowCount="3"
        android:columnCount="1"
        app:layout_constraintBottom_toTopOf="@+id/player2Bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/player1Bg">
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_4sdp"
            android:background="@drawable/custom_line"
            android:layout_gravity="bottom"
            android:layout_rowWeight="1"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_4sdp"
            android:background="@drawable/custom_line"
            android:layout_gravity="bottom"
            android:layout_rowWeight="1"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_4sdp"
            android:layout_gravity="bottom"
            android:layout_rowWeight="1"
            />
    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>